<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".GiuGhe">

    <TextView
        android:id="@+id/counttime"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="#F44336"
        android:textSize="30sp"
        android:layout_height="wrap_content" />
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="460dp"
        android:layout_column="2">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:text="Tên Rạp"
                android:layout_column="1" />

            <TextView
                android:id="@+id/txtRap"
                android:layout_width="match_parent"
                android:text="Galaxy Cinema"
                android:textSize="20dp"
                android:layout_height="wrap_content">
            </TextView>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:text="Phim"
                android:layout_column="1" />

            <TextView
                android:id="@+id/txtPhim"
                android:layout_width="match_parent"
                android:text="Chị Mười Ba"
                android:textSize="20dp"
                android:layout_height="wrap_content">
            </TextView>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:text="Ngày Chiếu"
                android:paddingRight="10dp"
                android:layout_column="1" />

            <TextView
                android:id="@+id/txtNgayChieu"
                android:layout_width="match_parent"
                android:text="01/01/2021"
                android:textSize="20dp"
                android:layout_height="wrap_content">
            </TextView>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:text="Giờ Chiếu"
                android:layout_column="1" />

            <TextView
                android:text="18:00"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:text="Phòng"
                android:layout_column="1" />

            <TextView
                android:text="1"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:text="Ghế Đã Đặt"
                android:layout_column="1" />


            <TextView
                android:text="A1,A2,A3"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:text="Tổng Tiền"
                android:layout_column="1" />

            <TextView
                android:id="@+id/tvPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="0"
                android:layout_column="2" />

        </TableRow>


    </TableLayout>

    <Button
        android:id="@+id/btnXacNhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác nhận"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        />


</LinearLayout>